<p id="notice"><%= notice %></p>

<h1>User Comments</h1>

<table>
  <thead>
    <tr>
      <th>Character</th>
      <th>Name</th>
      <th>Body</th>
      <th>Deleted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_comments.each do |user_comment| %>
      <tr>
        <td><%= user_comment.character_id %></td>
        <td><%= user_comment.name %></td>
        <td><%= user_comment.body %></td>
        <td><%= user_comment.deleted %></td>
        <td><%= link_to 'Show', user_comment %></td>
        <td><%= link_to 'Edit', edit_user_comment_path(user_comment) %></td>
        <td><%= link_to 'Destroy', user_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Comment', new_user_comment_path %>
